{
    "extends": [
      "tslint:recommended",
      "tslint-config-prettier"
    ],
    "rules": {
      "no-console": [
        true,
        "log",
        "error"
      ],
      "semicolon": [
        true,
        "always"
      ],
      "array-type": [
        true,
        "generic"
      ],
      "no-string-literal": false,
      "quotemark": [
        true,
        "single"
      ],
      "object-literal-shorthand": [
        true,
        "never"
      ],
      "only-arrow-functions": true,
      "interface-name": false,
      "max-classes-per-file": false,
      "no-var-requires": false
    }
  }